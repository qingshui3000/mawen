<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.4//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhao.mawen.mapper.UserMapper">
    <insert id="insert" parameterType="com.zhao.mawen.model.User">
        insert into user(name,account_id,token,gmt_create,gmt_modified,userface_url)
        values(#{name},#{accountId},#{token},#{gmtCreate},#{gmtModified},#{userfaceUrl})
    </insert>

    <select id="findByToken" resultType="com.zhao.mawen.model.User">
        select * from user where token=#{token}
    </select>

    <select id="findById" resultType="com.zhao.mawen.model.User">
        select * from user where id=#{id}
    </select>
</mapper>